datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id       Int      @id @default(autoincrement())
  email    String   @unique
  password String
  apiKeys  ApiKey[]
}

model ApiKey {
  id        Int      @id @default(autoincrement())
  key       String   @unique
  name      String   // Permitir nulo se necessário, mas use `name` e não `nameKEY`
  createdAt DateTime @default(now())
  userId    Int
  user      User     @relation(fields: [userId], references: [id])
}

